{
  "name": "sims",
  "version": "12.2.5",
  "description": "A super-simple fsp simulator",
  "main": "src/index.js",
  "author": "ModusBox",
  "license": "Apache-2.0",
  "contributors": [
    "Georgi Georgiev <georgi.georgiev@modusbox.com>",
    "Miguel de Barros <miguel.debarros@modusbox.com>",
    "Murthy Kakarlamudi <murthy@modusbox.com>",
    "Rajiv Mothilal <rajiv.mothilal@modusbox.com>",
    "Sri Miriyala <sridevi.miriyala@modusbox.com>",
    "Steven Oderayi <steven.oderayi@modusbox.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:mojaloop/simulator.git"
  },
  "engines": {
    "node": ">=22.x"
  },
  "scripts": {
    "pretest": "npm run lint",
    "standard": "npx standard",
    "lint": "npm run standard",
    "lint:fix": "npm run standard -- --fix",
    "start": "node src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:unit": "echo 'No tests defined'",
    "test:xunit": "npm run test:unit",
    "test:integration": "echo 'No tests defined'",
    "test:functional": "echo 'No tests defined'",
    "audit:fix": "npm audit fix",
    "audit:check": "npx audit-ci --config ./audit-ci.jsonc",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u",
    "release": "npx standard-version --no-verify --releaseCommitMessageFormat 'chore(release): {{currentTag}} [skip ci]'",
    "snapshot": "npx standard-version --no-verify --skip.changelog --prerelease snapshot --releaseCommitMessageFormat 'chore(snapshot): {{currentTag}}'"
  },
  "pre-commit": [
    "lint",
    "dep:check"
  ],
  "dependencies": {
    "@hapi/boom": "10.0.1",
    "@hapi/good": "9.0.1",
    "@hapi/hapi": "21.4.0",
    "@hapi/inert": "7.1.0",
    "@hapi/joi-date": "2.0.1",
    "@hapi/vision": "7.0.3",
    "@mojaloop/central-services-error-handling": "13.1.0",
    "@mojaloop/central-services-logger": "11.9.0",
    "@mojaloop/central-services-metrics": "12.6.0",
    "@mojaloop/central-services-shared": "18.28.1",
    "@mojaloop/event-sdk": "14.6.0",
    "@mojaloop/sdk-standard-components": "18.2.0",
    "axios": "1.9.0",
    "base64url": "3.0.1",
    "blipp": "4.0.2",
    "glob": "10.4.5",
    "hapi-swagger": "17.3.2",
    "joi": "17.13.3",
    "joi-currency-code": "3.0.2",
    "lodash": "4.17.21",
    "node-cache": "5.1.2"
  },
  "devDependencies": {
    "audit-ci": "7.1.0",
    "npm-audit-resolver": "3.0.0-RC.0",
    "npm-check-updates": "18.0.1",
    "pre-commit": "1.2.2",
    "replace": "1.2.2",
    "standard": "17.1.2",
    "standard-version": "9.5.0"
  },
  "overrides": {
    "@mojaloop/event-sdk": "14.6.0",
    "cross-spawn": "7.0.6",
    "glob": "10.4.5",
    "shins": {
      "ajv": "6.12.3",
      "ejs": "3.1.10",
      "path-to-regexp": "0.1.12",
      "sanitize-html": "2.12.1",
      "jsonpointer": "5.0.0",
      "markdown-it": "12.3.2",
      "postcss": "8.4.31"
    },
    "widdershins": {
      "markdown-it": "12.3.2",
      "swagger2openapi": "7.0.8"
    },
    "undici": "6.21.2",
    "yargs-parser": "21.1.1"
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "replace '\\[mojaloop/#(\\d+)\\]\\(https://github.com/mojaloop/(.*)/issues/(\\d+)\\)' '[mojaloop/#$1](https://github.com/mojaloop/project/issues/$1)' CHANGELOG.md"
    }
  }
}
